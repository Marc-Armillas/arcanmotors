<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Iniciar sesión
    </h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with scope: :user, url: user_session_path, local: true, class: "space-y-6" do |form| %>

        <!-- Email -->
        <div>
          <%= form.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
        </div>

        <!-- Password -->
        <div>
          <%= form.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.password_field :password, autocomplete: "current-password", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
        </div>

        <!-- Remember Me -->
        <div class="flex items-center">
          <%= form.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= form.label :remember_me, "Recuérdame", class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <!-- Botón de inicio de sesión -->
        <div>
          <%= form.submit "Iniciar sesión", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>

      <% end %>

      <!-- Enlaces de ayuda -->
      <div class="mt-6">
        <div class="text-sm">
          <%= link_to "¿Olvidaste tu contraseña?", new_user_password_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
        </div>
        <div class="text-sm mt-2">
          <%= link_to "¿No tienes una cuenta? Regístrate", new_user_registration_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
        </div>
      </div>
    </div>
  </div>
</div>
