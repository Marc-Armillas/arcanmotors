<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<div class="swiper" style="width: 100%; height: 100%">
  <div class="swiper-wrapper">
    <% car.images.each do |image| %>
      <div class="swiper-slide">
        <img src="<%= url_for(image) %>" alt="<%= car.name %>" class="w-full h-96 object-cover rounded-lg">
      </div>
    <% end %>
  </div>

  <div class="swiper-pagination swiper-pagination-clickable hidden lg:block"></div>
  <div class="swiper-scrollbar block lg:hidden"></div>

  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</div>
