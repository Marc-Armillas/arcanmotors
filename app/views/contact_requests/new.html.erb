<!-- app/views/contact/new.html.erb -->
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-center text-3xl font-bold mb-8">Contáctanos</h1>

  <div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-md">
    <%= form_with model: @contact_request, url: contact_request_path, method: :post, local: true, class: "space-y-6" do |f| %>
      <!-- Nombre -->
      <div>
        <%= f.label :name, "Nombre", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= f.text_field :name, class: "w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", required: true %>
        </div>
      </div>

      <!-- Correo Electrónico -->
      <div>
        <%= f.label :email, "Correo Electrónico", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= f.email_field :email, class: "w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", required: true %>
        </div>
      </div>

      <!-- Teléfono -->
      <div>
        <%= f.label :phone, "Teléfono", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= f.telephone_field :phone, class: "w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <!-- Asunto -->
      <div>
        <%= f.label :subject, "Asunto", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= f.text_field :subject, class: "w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", required: true %>
        </div>
      </div>

      <!-- Mensaje -->
      <div>
        <%= f.label :message, "Mensaje", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= f.text_area :message, rows: 6, class: "w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", required: true %>
        </div>
      </div>

      <!-- Botón de envío -->
      <div class="flex justify-center">
        <%= f.submit "Enviar mensaje", class: "inline-block w-full sm:w-auto bg-indigo-600 text-white text-lg font-medium px-6 py-3 rounded-md hover:bg-indigo-700" %>
      </div>

    <% end %>
  </div>
</div>
